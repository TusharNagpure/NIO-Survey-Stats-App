<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar for the app bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About the App"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This app has been developed for NIO. The app receives data via a serial port, and the data received consists of NMEA strings. The NMEA strings are then formatted in such a way that the displayed data includes date-time, latitude, longitude, and altitude."
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Source Code:"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to view the source code"
                android:textColor="@android:color/holo_blue_light"
                android:paddingBottom="16dp"
                android:clickable="true"
                android:onClick="openSourceCodeLink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Documentation:"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to view the documentation"
                android:textColor="@android:color/holo_blue_light"
                android:paddingBottom="16dp"
                android:clickable="true"
                android:onClick="openDocumentationLink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="References:"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kai-morich Serial USB Terminal Library"
                android:textColor="@android:color/holo_blue_light"
                android:clickable="true"
                android:onClick="openKaiMorichLink" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
